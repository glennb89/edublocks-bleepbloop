<category name="BleepBloop" colour="#5b5b6b" css-icon="customIcon fad fa-robot">
    <label text="BleepBloop"></label>

    <block type="import_bleepbloop"></block>

    <block type="bleepbloop_bleep"></block>

    <block type="bleepbloop_bloop"></block>

    <block type="bleepbloop_blorp">
        <value name="parameters">
            <shadow type="parameters">
                <mutation color="#5b5b6b" items="1" minimum="1" limit="1" inputType="string" />
                <value name="input_1">
                    <shadow type="inline_string">
                        <field name="value">"blorp"</field>
                    </shadow>
                </value>
            </shadow>
        </value>
    </block>

    <block type="bleepbloop_blonk">
        <value name="parameters">
            <shadow type="parameters">
                <mutation color="#5b5b6b" items="2" limit="2" inputType="string" />
                <value name="input_1">
                    <block type="variable_get">
                        <field name="variable_name">first_number</field>
                    </block>
                </value>
                <value name="input_2">
                    <block type="variable_get">
                        <field name="variable_name">second_number</field>
                    </block>
                </value>
            </shadow>
        </value>
    </block>
</category>